{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "declaration": false,
        "outDir": "./dist/esm",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true
    },
    "include": [
        "./out_flatc/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}